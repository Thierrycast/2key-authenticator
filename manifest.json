{
  "manifest_version": 3,
  "name": "2Key Authenticator",
  "short_name": "2Key",
  "version": "1.0.0",
  "description": "To Key. Or not to Key. Uma simples extensão para autenticação em duas etapas.",
  "permissions": ["windows", "system.display"],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "action": {
    "default_title": "Abrir 2Key"
  },
  "icons": {
    "16": "public/icons/icon.png",
    "48": "public/icons/icon.png",
    "128": "public/icons/icon.png"
  },
  "options_page": "src/config/index.html",
  "author": "Thierry Castro"
}
